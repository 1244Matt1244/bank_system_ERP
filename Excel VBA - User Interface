Sub LoadBankData()
    Dim transactionWorkbook As Workbook
    Set transactionWorkbook = Workbooks.Open("Transactions.xlsx")

    Dim customerWorkbook As Workbook
    Set customerWorkbook = Workbooks.Open("Customers.xlsx")

    ' Copy data to the current workbook
    transactionWorkbook.Sheets(1).UsedRange.Copy Destination:=ThisWorkbook.Sheets("Transactions").Range("A1")
    customerWorkbook.Sheets(1).UsedRange.Copy Destination:=ThisWorkbook.Sheets("Customers").Range("A1")

    transactionWorkbook.Close
    customerWorkbook.Close
End Sub
